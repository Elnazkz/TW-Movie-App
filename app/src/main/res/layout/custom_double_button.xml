<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_white_alpha_half"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/top_button"
            android:layout_width="@dimen/dimen_160"
            android:layout_height="@dimen/dimen_30"
            android:gravity="center|center_vertical"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:text="@string/rate_it_myself"
            android:background="@drawable/bg_top_round_brown"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_button"
            android:layout_width="@dimen/dimen_160"
            android:layout_height="@dimen/dimen_30"
            android:gravity="center|center_vertical"
            android:text="@string/add_personal_rating"
            android:textSize="@dimen/text_12"
            android:textColor="@color/button_brown"
            app:layout_constraintStart_toStartOf="@id/top_button"
            android:background="@drawable/bg_bottom_round_black"
            app:layout_constraintTop_toBottomOf="@id/top_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
